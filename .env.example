# Cache and Rate Limiting Environment Configuration

# Redis Configuration (for distributed caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_DB=0

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_USER_BALANCES=30    # 30 seconds
CACHE_TTL_MARKET_PRICES=300     # 5 minutes
CACHE_TTL_PORTFOLIO=60          # 1 minute

# Rate Limiting Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORE_TYPE=memory  # Options: memory, redis

# Environment-specific settings
NODE_ENV=development

# Logging
RATE_LIMIT_LOG_VIOLATIONS=true
RATE_LIMIT_LOG_LEVEL=info

# Monitoring
RATE_LIMIT_MONITOR_INTERVAL=30000  # milliseconds